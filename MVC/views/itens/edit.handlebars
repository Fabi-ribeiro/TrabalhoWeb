<main class="container edit-item">
  <h2 class="page-title">
    <i class="fa-solid fa-pen-to-square"></i> Editar Item
  </h2>

  <form action="/itens/edit/{{item.id}}" method="POST" class="form-card">
    <div class="form-group">
      <label for="nome_item"><i class="fa-solid fa-box"></i> Nome do Item</label>
      <input type="text" id="nome_item" name="nome_item" value="{{item.nome_item}}" required>
    </div>

    <div class="form-group">
      <label for="quantidade_total"><i class="fa-solid fa-cubes"></i> Quantidade Total</label>
      <input type="number" id="quantidade_total" name="quantidade_total" min="1" value="{{item.quantidade_total}}" required>
    </div>

    <div class="form-group">
      <label for="local"><i class="fa-solid fa-location-dot"></i> Localização / Sala</label>
      <input type="text" id="local" name="local" value="{{item.local}}" required>
    </div>

    <div class="form-group">
      <label for="imagem"><i class="fa-solid fa-image"></i> URL da Imagem</label>
      <input type="url" id="imagem" name="imagem" value="{{item.imagem}}">
    </div>

    <div class="form-actions">
      <button type="submit" class="btn-save">
        <i class="fa-solid fa-floppy-disk"></i> Salvar Alterações
      </button>
      <a href="/home" class="btn-cancel">
        <i class="fa-solid fa-xmark"></i> Cancelar
      </a>
    </div>
  </form>
</main>
