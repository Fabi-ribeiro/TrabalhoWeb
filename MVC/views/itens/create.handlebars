<main class="container create-item">
  <h2 class="page-title">
    <i class="fa-solid fa-plus"></i> Cadastrar Novo Item
  </h2>

  <form action="/itens/create" method="POST" class="form-card">
    <div class="form-group">
      <label for="nome_item"><i class="fa-solid fa-box"></i> Nome do Item</label>
      <input type="text" id="nome_item" name="nome_item" placeholder="Ex: Cadeira Executiva" required>
    </div>

    <div class="form-group">
      <label for="quantidade_total"><i class="fa-solid fa-cubes"></i> Quantidade Total</label>
      <input type="number" id="quantidade_total" name="quantidade_total" min="1" placeholder="Ex: 10" required>
    </div>

    <div class="form-group">
      <label for="local"><i class="fa-solid fa-location-dot"></i> Localização / Sala</label>
      <input type="text" id="local" name="local" placeholder="Ex: Bloco B - Sala 201" required>
    </div>

    <div class="form-group">
      <label for="imagem"><i class="fa-solid fa-image"></i> URL da Imagem</label>
      <input type="url" id="imagem" name="imagem" placeholder="Cole o link da imagem do item">
    </div>

    <div class="form-actions">
      <button type="submit" class="btn-save">
        <i class="fa-solid fa-plus"></i> Cadastrar Item
      </button>
      <a href="/home" class="btn-cancel">
        <i class="fa-solid fa-xmark"></i> Cancelar
      </a>
    </div>
  </form>
</main>
