<main class="container sala-form">
  <h2 class="page-title">
    <i class="fa-solid fa-plus"></i> Cadastrar Nova Sala
  </h2>
  
  <form action="/salas/create" method="POST" class="form-card">
      <div class="form-group">
        <label><i class="fa-solid fa-door-open"></i> Nome da Sala</label>
        <input type="text" name="nome_sala" placeholder="Ex: Sala 201 - Reuniões" required>
      </div>

      <div class="form-group">
        <label><i class="fa-solid fa-location-dot"></i> Localização</label>
        <input type="text" name="localizacao" placeholder="Ex: Bloco B4 - Térreo" required>
      </div>

      <div class="form-group">
        <label><i class="fa-solid fa-users"></i> Capacidade</label>
        <input type="number" name="capacidade" min="1" placeholder="Ex: 12" required>
      </div>

      <div class="form-group">
        <label><i class="fa-solid fa-image"></i> Imagem (URL)</label>
        <input type="text" name="imagem" placeholder="https://...">
      </div>

      <div class="form-actions">
        <button type="submit" class="btn-save">
          <i class="fa-solid fa-plus"></i> Salvar Sala
        </button>
        <a href="/home" class="btn-cancel">Cancelar</a>
      </div>
  </form>
</main>
