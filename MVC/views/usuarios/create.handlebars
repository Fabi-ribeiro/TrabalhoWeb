<div class="container">
  <div class="icon-top">
    <div class="icon-bg">
      <i class="fa-regular fa-user"></i>
    </div>
  </div>

  <h1 class="titulo">Reservas UTFPR</h1>
  <p class="subtitulo">Crie sua conta para acessar o sistema</p>

  {{#if error}}
    <div class="erro-login">{{error}}</div>
  {{/if}}

  <div class="card">
    <h2>Criar Conta</h2>
    <form action="/usuarios/create" method="POST">
      <div class="form-group">
        <label for="nome"><i class="fa-regular fa-user"></i> Nome</label>
        <input type="text" id="nome" name="nome" placeholder="Seu nome completo" required />
      </div>

      <div class="form-group">
        <label for="email"><i class="fa-regular fa-envelope"></i> E-mail</label>
        <input type="email" id="email" name="email" placeholder="seu.email@utfpr.edu.br" required />
      </div>

      <div class="form-group">
        <label for="registro"><i class="fa-regular fa-id-card"></i> RA / Registro</label>
        <input type="text" id="registro" name="registro" placeholder="Seu RA ou Registro" required />
      </div>

      <div class="form-group">
        <label for="senha"><i class="fa-solid fa-lock"></i> Senha</label>
        <div class="input-senha">
          <input type="password" id="senha" name="senha" placeholder="Digite sua senha" required />
          <i class="fa-regular fa-eye"></i>
        </div>
      </div>

      <div class="form-group">
        <label for="tipo_usuario"><i class="fa-solid fa-users"></i> Perfil</label>
        <select id="tipo_usuario" name="tipo_usuario" required>
          <option value="">Selecione...</option>
          <option value="ADMIN">Administrador</option>
          <option value="USER">Usuário</option>
        </select>
      </div>

      <button type="submit" class="btn-login">Cadastrar</button>
    </form>
  </div>

  <p class="link-criar">Já tem uma conta? <a href="/login">Fazer login</a></p>
</div>